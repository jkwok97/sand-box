{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "react-component",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "alias": "p",
      "$default": {
        "$source": "argv"
      }
    },
    "directory": {
      "type": "string",
      "description": "The directory name under source",
      "alias": "dir",
      "$default": {
        "$source": "argv"
      }
    }
  },
  "required": ["name", "directory"]
}
